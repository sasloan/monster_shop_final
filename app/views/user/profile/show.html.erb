<h2>Welcome to your profile</h2>

<section id="user_profile_info">
  <p>Name: <%= @user.name %></p>
  <p>Address: <%= @user.address %></p>
  <p><%= "#{@user.city} #{@user.state}, #{@user.zip}" %></p>
  <p>Email: <%= @user.email %></p>
</section>

<section id='user_buttons'>
  <%= link_to  "Edit", edit_user_profile_path(@user.id) %>
  <%= link_to  "Change Password", user_profile_edit_password_path %>
  <%= link_to 'My Orders', user_profile_orders_path(@user.id) %>
</section>
