<h2>New password</h2>
<section id='new_password'>
  <%= form_tag user_profile_path(current_user.id), method: :patch do %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>

    <%= submit_tag 'Submit' %>
  <% end %>
</section>
