<h2>Create a New User</h2>
<section id='new_user_form'>
  <%= form_tag users_path, method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :address %>
    <%= text_field_tag :address %>

    <%= label_tag :city %>
    <%= text_field_tag :city %>

    <%= label_tag :state %>
    <%= text_field_tag :state %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :password_confirmation %>
    <%= password_field_tag :pass_confirm %>

    <%= submit_tag 'Submit' %>
  <% end %>
</section>
