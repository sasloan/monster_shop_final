<h2> Create New Discount </h2>

<%= form_tag "/merchant_employee/merchants/#{@merchant.id}/bulk_discounts", method: :post do %>

	<p><%= label_tag :name %>
		<%= text_field_tag :name %></p>

	<p><%= label_tag :percentage_off %>
		(in decimal form)
		<%= number_field_tag :percentage_off %></p>

	<p><%= label_tag :required_quantity %>
		<%= number_field_tag :required_quantity %></p>

	<p><%= submit_tag "Create Bulk Discount" %></p>
<% end %>
