<h2> Bulk Discounts </h2>

<p><%= link_to "New Bulk Discount", "/merchant_employee/merchants/#{@merchant.id}/bulk_discounts/new", method: :get %></p>

<% @bulk_discounts.each do |bulk_discount| %>
	<section id='bulk_discount-<%= bulk_discount.id %>'>
		<p>Bulk Discount Name: <%= link_to bulk_discount.name, "/merchant_employee/merchants/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}" %></p>
		<p>Bulk Discount Percentage Off: <%= bulk_discount.percentage_off %>%</p>
		<p>Bulk Discount Required Item Count: <%= bulk_discount.required_quantity %></p>
	</section>
<% end %>
