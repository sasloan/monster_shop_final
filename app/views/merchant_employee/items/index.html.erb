<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchant_employee/dashboard"%><span> Items</span></h1>
  <p align="center"><%= link_to "Add New Item", new_merchant_employee_merchant_item_path(current_user.id, @merchant.id) %></p>
<% else %>
  <h1>All Items</h1>
<% end %>

<section class="grid-container">
  <% @items.each do |item| %>
  <% if item.active? %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, merchant_employee_merchant_item_path(@merchant.id, item.id) %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <section id= 'image-<%= item.id %>'>
      <p><%=link_to image_tag(item.image), merchant_employee_merchant_item_path(@merchant.id, item.id) %></p>
      </section>
			<p><%= link_to "Delete Item", merchant_employee_merchant_item_path(@merchant.id, item.id), method: :delete if item.no_orders? %></p>
			<p><%= button_to "Deactivate", "/merchant_employee/merchants/#{@merchant.id}/items/#{item.id}/update", method: :patch %></p>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <p>Active</p>
      <% if !@merchant %>
      <% end %>
	<% else %>
	<section class = "grid-item" id= 'item-<%=item.id%>'>
		<h2> <%=link_to item.name, merchant_employee_merchant_item_path(@merchant.id, item.id) %> </h2>
		<p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
		<section id= 'image-<%= item.id %>'>
			<p><%=link_to image_tag(item.image), merchant_employee_merchant_item_path(@merchant.id, item.id) %></p>
		</section>
		<p><%= link_to "Delete Item", merchant_employee_merchant_item_path(@merchant.id, item.id), method: :delete if item.no_orders? %></p>
		<p><%= button_to "Activate", "/merchant_employee/merchants/#{@merchant.id}/items/#{item.id}/update", method: :patch %></p>
		<p> <%= item.description unless @merchant%> </p>
		<p>Price: <%=number_to_currency(item.price) %> </p>
		<p>Inventory: <%= item.inventory %> </p>
		<p>Active</p>
			<% if !@merchant %>
			<% end %>
  </section>
    <% end %>
  <% end %>
</section>
